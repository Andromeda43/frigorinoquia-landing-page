---
// Importar componentes
import Navbar from '../components/Navbar/Navbar.astro';
import Footer from '../components/Footer/Footer.astro';

// Definir interfaz para las props
interface Props {
  title: string;
  description?: string;
}

// Valores por defecto para las props
const { 
  title = "Frigorinoquia - Calidad certificada para la industria c치rnica", 
  description = "Planta de beneficio animal de nivel nacional con los m치s altos est치ndares de calidad y sanidad establecidos por el Decreto 1500."
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Merriweather:wght@300;400;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- CSS b치sico -->
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      html {
        scroll-behavior: smooth;
        overflow-x: hidden;
      }
      
      body {
        font-family: 'Merriweather', serif;
        color: #1F2937;
        line-height: 1.5;
        overflow-x: hidden;
        width: 100%;
        position: relative;
      }
      
      /* Fix para iOS Safari 100vh issue */
      @supports (-webkit-touch-callout: none) {
        .h-screen, [style*="height: 100vh"] {
          height: -webkit-fill-available;
        }
      }
    </style>
  </head>
  <body>
    <!-- Usar el componente Navbar -->
    <Navbar />

    <main>
      <slot />
    </main>

    <!-- Usar el componente Footer -->
    <Footer />
  </body>
</html>